CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
RM = /bin/rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $@

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

clean:
    $(RM) *~ $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean oclean
    $(RM) $(NAME)

re: fclean all

